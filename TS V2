// set up for loading pic
int col[8];

int pixel_x, pixel_y;     //Touch_getXY() updates global vars

// Button calibration
int margin = 10;
int btnWidth = 150;
int btnHeight = 55;
int btnY = 200;
int x;

//Number section
 long Num1,Num2,Number;
 char action;
 boolean result = false;


// Software variable
